<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Phorest" parent="">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Phorest.Head1">
        <item name="android:fontFamily">@font/phorest_font_header</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.Phorest.Head2">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Phorest.SubTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Phorest.Body1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Phorest.Body2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>